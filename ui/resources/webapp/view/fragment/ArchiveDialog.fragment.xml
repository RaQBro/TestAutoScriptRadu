<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Dialog id="archiveDialog" title="{i18n>archiveDialog}" contentWidth="30%" draggable="false" horizontalScrolling="false"
		verticalScrolling="false">
		<Label text="simple DatePicker" labelFor="DP1"/>
		<DatePicker id="DP1" placeholder="Enter Date" change="ArchiveDateHandleChange" class="sapUiSmallMarginBottom"/>
		<beginButton>
			<Button text="{i18n>okBtn}" press=".onArchiveDialogOk"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press=".onArchiveDialogCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>