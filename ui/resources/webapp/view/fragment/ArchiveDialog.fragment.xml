<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Dialog id="archiveDialog" title="{i18n>archiveDialog}" contentWidth="20%" draggable="false" horizontalScrolling="false"
		verticalScrolling="false">
		<Label text="{i18n>archiveLabel}" labelFor="DP1" class="sapUiSmallMargins"/>
		<DatePicker id="DP1" placeholder="Enter Date" class="sapUiLargeMargins"/>
		<beginButton>
			<Button text="{i18n>okBtn}" press=".onArchiveDialogOk" class="sapUiSmallMargins"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press=".onArchiveDialogCancel" class="sapUiSmallMargins"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>