<core:FragmentDefinition xmlns:m="sap.m" xmlns:f="sap.f" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<f:Card>
		<f:content>
			<l:VerticalLayout class="sapUiContentPadding">
				<m:List>
					<m:StandardListItem title="{i18n>cardAboutTitle}" icon="sap-icon://hint" type="Active" press="onAboutPress"/>
					<m:StandardListItem title="{i18n>cardSignOut}" icon="sap-icon://log" type="Active" press="onLogoutPress"/>
				</m:List>
			</l:VerticalLayout>
		</f:content>
	</f:Card>
</core:FragmentDefinition>