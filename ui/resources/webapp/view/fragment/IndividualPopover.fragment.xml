<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover id="individualPpv" placement="Bottom" contentMinWidth="200px">
		<List>
			<StandardListItem class="sapUiSmallMarginBegin sapUiSmallMarginEnd" title="{i18n>cardHowToTitle}" icon="sap-icon://hint" type="Active"
				press="onHowToPress"/>
			<StandardListItem class="sapUiSmallMarginBegin sapUiSmallMarginEnd" title="{i18n>cardAboutTitle}" icon="sap-icon://information"
				type="Active" press="onAboutPress"/>
			<StandardListItem class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginBottom" title="{i18n>cardSignOut}" icon="sap-icon://log"
				type="Active" press="onLogoutBtnPress"/>
		</List>
	</Popover>
</core:FragmentDefinition>