<mvc:View controllerName="webapp.ui.controller.Messages" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false" showFooter="true" showNavButton="false" floatingFooter="false" showSubHeader="false">
		<content>
			<VBox id="vboxMessages" fitContainer="true">
				<smartTable:SmartTable id="stMessages" entitySet="job-messages" tableType="ResponsiveTable" useTablePersonalisation="true"
					initialise="onInitialiseSmartTable" showTablePersonalisation="true" useVariantManagement="false" header="{i18n>numberOfEntries}"
					showRowCount="true" useExportToExcel="true" initiallyVisibleFields="JOB_ID,TIMESTAMP,SEVERITY,TEXT,OPERATION" enableAutoBinding="true"
					requestAtLeastFields="JOB_ID,TIMESTAMP,SEVERITY,TEXT,OPERATION" beforeRebindTable="onBeforeRebindTable" ignoredFields="MESSAGE_ID">
					<smartTable:layoutData>
						<FlexItemData growFactor="1" baseSize="0%"/>
					</smartTable:layoutData>
					<smartTable:customToolbar>
						<OverflowToolbar design="Transparent">
							<ToolbarSpacer/>
							<Button id="btnSeeAllEntries" icon="sap-icon://reset" text="{i18n>btnSeeAllEntries}" visible="false" press="onSeeAllEntries"/>
							<Button id="btnRefresh" icon="sap-icon://refresh" text="{i18n>btnRefresh}" visible="true" press="onRefreshEntries"/>
						</OverflowToolbar>
					</smartTable:customToolbar>
					<Table id="tMessages" growing="true" growingThreshold="1000" sticky="ColumnHeaders">
						<ColumnListItem highlight="{path:'SEVERITY',formatter:'.formatRowHighlight'}"/>
					</Table>
				</smartTable:SmartTable>
			</VBox>
		</content>
		<footer>
			<core:Fragment fragmentName="webapp.ui.toolBarMessages.ToolbarMessages" type="XML"/>
		</footer>
	</Page>
</mvc:View>