<mvc:View id="applicationSettingsView" controllerName="webapp.ui.controller.ApplicationSettings" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" displayBlock="true">
	<Page showHeader="false" showFooter="true" showNavButton="false" floatingFooter="false" showSubHeader="false">
		<content>
			<l:VerticalLayout class="sapUiContentPadding" width="50%">
				<Text text="{i18n>infoTextApplicationName}"/>
				<Label text="{i18n>applicationName}" labelFor="appName"/>
				<Input id="appName" placeholder="{i18n>applicationNamePlaceholder}" change="onChangeApplicationName" editable="false"></Input>
				<Text text="{i18n>infoTextClientId}"/>
				<Label text="{i18n>clientId}" labelFor="clientId"/>
				<Input id="clientId" placeholder="{i18n>clientIdPlaceholder}" change="onChangeClientId" editable="false"></Input>
				<Label text="{i18n>clientSecret}" labelFor="clientSecret"/>
				<Input id="clientSecret" placeholder="{i18n>clientSecretPlaceholder}" type="Password" change="onChangeClientSecret" editable="false"></Input>
			</l:VerticalLayout>
			<l:VerticalLayout class="sapUiContentPadding" width="50%">
				<Text text="{i18n>infoTextTechnicalUser}"/>
				<Label text="{i18n>technicalUsername}" labelFor="technicalUsername"/>
				<Input id="technicalUsername" placeholder="{i18n>technicalUsernamePlaceholder}" change="onChangeUsername" editable="false"></Input>
				<Label text="{i18n>technicalPassword}" labelFor="technicalPassword"/>
				<Input id="technicalPassword" placeholder="{i18n>technicalPasswordPlaceholder}" type="Password" change="onChangePassword" editable="false"></Input>
			</l:VerticalLayout>
		</content>
		<footer>
			<core:Fragment fragmentName="webapp.ui.toolBarMessages.ToolbarMessages" type="XML"/>
		</footer>
	</Page>
</mvc:View>