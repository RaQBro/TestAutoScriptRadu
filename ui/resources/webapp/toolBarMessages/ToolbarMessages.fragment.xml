<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Toolbar id="otbFooter">
		<Button id="buttonMessagePopover" text="{= ${message>/}.length }" visible="{= ${message>/}.length > 0 }" type="Emphasized"
			press=".ToolBarMessages.onMessagePopoverPress"/>
		<ToolbarSpacer/>
		<Button id="logoutBtn" icon="sap-icon://log" type="Critical" text="{i18n>Logout}" press="logoutPress" visible="{pageModel>/logoutVisible}"
			enabled="{pageModel>/logoutEnabled}"/>
		<Button id="saveBtn" icon="sap-icon://save" type="Emphasized" text="{i18n>Save}" press="onSavePress" visible="{pageModel>/saveVisible}"
			enabled="{pageModel>/saveEnabled}"/>
		<Button id="editBtn" icon="sap-icon://edit" type="Emphasized" text="{i18n>Edit}" press="onEditPress" visible="{pageModel>/editVisible}"
			enabled="{pageModel>/editEnabled}"/>
	</Toolbar>
</core:FragmentDefinition>