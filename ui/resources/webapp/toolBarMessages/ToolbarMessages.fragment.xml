<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Toolbar id="otbFooter">
		<Button id="buttonMessagePopover" text="{= ${message>/}.length }" visible="{= ${message>/}.length > 0 }" type="Emphasized"
			press=".ToolBarMessages.onMessagePopoverPress"/>
		<ToolbarSpacer/>
		<Button id="logoutBtn" icon="sap-icon://log" type="Critical" text="{i18n>Logout}" press="logoutPress" visible="false" enabled="false"/>
		<Button id="saveBtn" icon="sap-icon://save" type="Emphasized" text="{i18n>Save}" press="onSavePress" visible="true"/>
		<Button id="editBtn" icon="sap-icon://edit" type="Emphasized" text="{i18n>Edit}" press="onEditPress" visible="true"/>
	</Toolbar>
</core:FragmentDefinition>