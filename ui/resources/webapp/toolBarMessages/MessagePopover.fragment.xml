<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<MessagePopover id="messagePopoverBox" items="{message>/}" activeTitlePress="onMessageTitlePress" initiallyExpanded="true" groupItems="true">
		<headerButton>
			<Button id="removePopoverMessages" icon="sap-icon://clear-all" type="Neutral" text="{i18n>removePopoverMessages}"
				press="removePopoverMessages"/>
		</headerButton>
		<MessageItem type="{message>type}" title="{message>message}" subtitle="{message>additionalText}" description="{message>description}"
			groupName="{message>code}" activeTitle="{message>technical}"/>
	</MessagePopover>
</core:FragmentDefinition>